<Page x:Class="Test.UserHomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="UserHomePage"
      Background="{DynamicResource BackgroundColor}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 🔝 Welkom + Uitloggen -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="10"
                    Grid.Row="0">
            <TextBlock x:Name="WelcomeTextBlock"
                       FontSize="14"
                       FontWeight="Bold"
                       Foreground="{DynamicResource TextColor}"
                       VerticalAlignment="Center"
                       Margin="0,0,10,0"/>
            <Button Content="Uitloggen"
                    Click="Logout_Click"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Foreground="Red"
                    FontWeight="Bold"/>
        </StackPanel>

        <!-- 📦 Dashboard -->
        <StackPanel Grid.Row="1" Margin="30">

            <TextBlock Text="👤 Jouw profiel"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="{DynamicResource TextColor}"
                       Margin="0,0,0,10"/>

            <!-- ✅ Vervangt StackPanel met Border -->
            <Border Background="#EFEFEF" Padding="15" CornerRadius="8">
                <StackPanel>
                    <TextBlock x:Name="UserEmailText" FontSize="14" Margin="0,0,0,5"/>
                    <TextBlock x:Name="UserCityText" FontSize="14" Margin="0,0,0,5"/>
                    <TextBlock x:Name="UserBirthText" FontSize="14" Margin="0,0,0,5"/>
                    <TextBlock x:Name="UserGenderText" FontSize="14"/>
                </StackPanel>
            </Border>

            <!-- 🧭 Acties -->
            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                <Button Content="Instellingen" Click="OpenSettings_Click" Width="120" Margin="0,0,15,0"/>
                <Button Content="Bekijk ritten" Width="120"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
