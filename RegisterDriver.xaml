<Page x:Class="Test.Login_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Login_Page"
      Height="700"
      Width="500">

    <Grid Background="White" Margin="0,0,0,329">
     
        <Border Background="#4C1130" Height="35" VerticalAlignment="Top">
            <Grid>
                <TextBlock Text="Drive2Gether" Foreground="White" VerticalAlignment="Center" FontWeight="Bold" Margin="50,0,0,0"/>
                <Button Content="⚙" Background="Transparent" BorderThickness="0" Foreground="White" FontSize="14" HorizontalAlignment="Right" Margin="0,0,10,0"/>
            </Grid>
        </Border>

        <StackPanel Margin="20,50,20,20" VerticalAlignment="Top">
            <Label Content="Persoonlijke informatie" FontWeight="Bold" />

            <!-- Naam -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBox Width="120" Margin="0,0,10,0" Text="Voornaam*" GotFocus="TextBox_GotFocus"/>
                <TextBox Width="120" Text="Achternaam*" GotFocus="TextBox_GotFocus"/>
            </StackPanel>

            <!-- Geboortedatum en geslacht -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBox Width="40" Margin="0,0,5,0" Text="DD" GotFocus="TextBox_GotFocus"/>
                <TextBox Width="40" Margin="0,0,5,0" Text="MM" GotFocus="TextBox_GotFocus"/>
                <TextBox Width="60" Margin="0,0,10,0" Text="YYYY" GotFocus="TextBox_GotFocus"/>
                <Label Content="Geslacht:" VerticalAlignment="Center" Margin="10,0,5,0"/>
                <RadioButton Content="Man" GroupName="Gender" Margin="5,0"/>
                <RadioButton Content="Vrouw" GroupName="Gender" Margin="5,0"/>
            </StackPanel>

            <!-- Contact -->
            <TextBox Margin="0,0,0,5" Text="E-mailadres" GotFocus="TextBox_GotFocus"/>
            <TextBox Margin="0,0,0,5" Text="Gsm" GotFocus="TextBox_GotFocus"/>
            <TextBox Margin="0,0,0,10" Text="Woonplaats" GotFocus="TextBox_GotFocus"/>

            <Label Content="Auto informatie" FontWeight="Bold" />

            <!-- Auto info -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBox Width="150" Margin="0,0,10,0" Text="Merk en type" GotFocus="TextBox_GotFocus"/>
                <TextBox Width="100" Text="Nummerplaat" GotFocus="TextBox_GotFocus"/>
            </StackPanel>

            <!-- Kleur en opties -->
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <StackPanel Margin="0,0,20,0">
                    <Label Content="Kleur van auto"/>
                    <ComboBox Width="100">
                        <ComboBoxItem Content="Rood"/>
                        <ComboBoxItem Content="Blauw"/>
                        <ComboBoxItem Content="Groen"/>
                        <ComboBoxItem Content="Zwart"/>
                        <ComboBoxItem Content="Wit"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Margin="0,0,20,0">
                    <Label Content="Roken toegestaan"/>
                    <CheckBox Content="Ja/Nee"/>
                </StackPanel>

                <StackPanel>
                    <Label Content="Muziek"/>
                    <CheckBox Content="Ja/Nee"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
