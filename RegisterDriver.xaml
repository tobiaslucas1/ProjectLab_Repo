<Page x:Class="Test.RegisterDriver"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Registratie - Bestuurder" Background="White">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <Border Background="#4C1130" Height="40" VerticalAlignment="Top" CornerRadius="5">
                <Grid>
                    <Image Source="/Drive2Gether_logo.jpg" Height="30" Width="30" VerticalAlignment="Center" Margin="10,0,0,0" HorizontalAlignment="Left"/>
                    <TextBlock Text="Drive2Gether - Registratie Bestuurder" Foreground="White" VerticalAlignment="Center" FontSize="16" FontWeight="Bold" Margin="50,0,0,0"/>
                    <Button Content="Startpagina" Click="GoHome_Click" Background="Transparent" BorderThickness="0" Foreground="White" FontSize="14" HorizontalAlignment="Right" Margin="0,0,10,0"/>
                </Grid>
            </Border>

            <!-- FORM -->
            <StackPanel Grid.Row="1" Margin="0,20,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" Width="500">

                <!-- Persoonlijke Informatie -->
                <TextBlock Text="Persoonlijke Informatie" FontWeight="Bold" FontSize="16" Margin="0,10"/>

                <Label Content="Voornaam"/>
                <TextBox x:Name="FirstNameBox" Margin="0,0,0,5"/>

                <Label Content="Achternaam"/>
                <TextBox x:Name="LastNameBox" Margin="0,0,0,5"/>

                <Label Content="Geboortedatum (DD/MM/YYYY)"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBox x:Name="DayBox" Width="50" Margin="0,0,5,0" Text="DD"/>
                    <TextBox x:Name="MonthBox" Width="50" Margin="0,0,5,0" Text="MM"/>
                    <TextBox x:Name="YearBox" Width="80" Text="YYYY"/>
                </StackPanel>

                <Label Content="Geslacht"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <RadioButton x:Name="GenderMale" Content="Man" GroupName="Gender" Margin="0,0,10,0"/>
                    <RadioButton x:Name="GenderFemale" Content="Vrouw" GroupName="Gender"/>
                </StackPanel>

                <Label Content="E-mailadres"/>
                <TextBox x:Name="EmailBox" Margin="0,0,0,5"/>

                <Label Content="Wachtwoord"/>
                <PasswordBox x:Name="PasswordBox" Margin="0,0,0,5"/>

                <Label Content="Gsm"/>
                <TextBox x:Name="PhoneBox" Margin="0,0,0,5"/>

                <Label Content="Woonplaats"/>
                <TextBox x:Name="CityBox" Margin="0,0,0,10"/>

                <!-- Auto Info -->
                <TextBlock Text="Auto Informatie" FontWeight="Bold" FontSize="16" Margin="10,20,0,10"/>

                <Label Content="Merk en type"/>
                <TextBox x:Name="CarModelBox" Margin="0,0,0,5"/>

                <Label Content="Nummerplaat"/>
                <TextBox x:Name="PlateBox" Margin="0,0,0,5"/>

                <Label Content="Kleur van auto"/>
                <ComboBox x:Name="ColorComboBox" Margin="0,0,0,5" Width="200">
                    <ComboBoxItem Content="Rood"/>
                    <ComboBoxItem Content="Blauw"/>
                    <ComboBoxItem Content="Groen"/>
                    <ComboBoxItem Content="Zwart"/>
                    <ComboBoxItem Content="Grijs"/>
                    <ComboBoxItem Content="Geel"/>
                    <ComboBoxItem Content="Wit"/>
                    <ComboBoxItem Content="Andere"/>
                </ComboBox>

                <CheckBox x:Name="SmokingCheckBox" Content="Roken toegestaan?" Margin="0,5"/>
                <CheckBox x:Name="MusicCheckBox" Content="Muziek toegestaan?" Margin="0,5"/>

                <!-- Knoppen -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button Content="Registreren" Click="SaveButton_Click" Width="120" Height="30" Margin="10"/>
                    <Button Content="Annuleren" Click="GoHome_Click" Width="120" Height="30" Margin="10"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>