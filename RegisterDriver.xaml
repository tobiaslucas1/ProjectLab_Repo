<Page x:Class="Test.RegisterDriver"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="RegisterDriver"
      Height="500"
      Width="800">

    <Grid Background="White">

        <Border Background="#4C1130" Height="35" VerticalAlignment="Top">
            <Grid>
                <Image Source="/Drive2Gether_logo.jpg" Height="28" Width="28" VerticalAlignment="Center" Margin="10,0,0,0" HorizontalAlignment="Left"/>
                <TextBlock Text="Drive2Gether" Foreground="White" VerticalAlignment="Center" FontWeight="Bold" Margin="50,0,0,0"/>
                <Button Content="settings" Background="Transparent" BorderThickness="0" Foreground="White" FontSize="14" HorizontalAlignment="Right" Margin="0,0,10,0"/>
            </Grid>
        </Border>

        <Border Width="500" VerticalAlignment="Center" HorizontalAlignment="Center" Padding="20" BorderBrush="Gray" BorderThickness="1" CornerRadius="10" Background="White">
            <StackPanel>

                <Label Content="Persoonlijke informatie" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBox Width="220" Margin="0,0,10,0" Text="Voornaam*" GotFocus="TextBox_GotFocus"/>
                    <TextBox Width="220" Text="Achternaam*" GotFocus="TextBox_GotFocus"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBox Width="50" Margin="0,0,5,0" Text="DD" GotFocus="TextBox_GotFocus"/>
                    <TextBox Width="50" Margin="0,0,5,0" Text="MM" GotFocus="TextBox_GotFocus"/>
                    <TextBox Width="80" Margin="0,0,10,0" Text="YYYY" GotFocus="TextBox_GotFocus"/>
                    <Label Content="Geslacht:" VerticalAlignment="Center" Margin="10,0,5,0"/>
                    <RadioButton Content="Man" GroupName="Gender" Margin="5,0"/>
                    <RadioButton Content="Vrouw" GroupName="Gender" Margin="5,0"/>
                </StackPanel>

                <TextBox Margin="0,0,0,5" Text="E-mailadres" GotFocus="TextBox_GotFocus"/>
                <TextBox Margin="0,0,0,5" Text="Gsm" GotFocus="TextBox_GotFocus"/>
                <TextBox Margin="0,0,0,10" Text="Woonplaats" GotFocus="TextBox_GotFocus"/>

                <Label Content="Auto informatie" FontWeight="Bold" FontSize="14" Margin="0,10,0,10"/>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBox Width="280" Margin="0,0,10,0" Text="Merk en type" GotFocus="TextBox_GotFocus"/>
                    <TextBox Width="160" Text="Nummerplaat" GotFocus="TextBox_GotFocus"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <StackPanel Margin="0,0,20,0">
                        <Label Content="Kleur van auto"/>
                        <ComboBox Width="120">
                            <ComboBoxItem Content="Rood"/>
                            <ComboBoxItem Content="Blauw"/>
                            <ComboBoxItem Content="Groen"/>
                            <ComboBoxItem Content="Zwart"/>
                            <ComboBoxItem Content="Wit"/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Margin="0,0,20,0">
                        <Label Content="Roken toegestaan"/>
                        <CheckBox Content="Ja/Nee"/>
                    </StackPanel>

                    <StackPanel>
                        <Label Content="Muziek"/>
                        <CheckBox Content="Ja/Nee"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>

    </Grid>
</Page>
