<Page x:Class="Test.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="RegisterPage"
      Background="White">
    <ScrollViewer>
        <StackPanel>
            <Border Background="#4C1130" Height="35" VerticalAlignment="Top">
                <Grid>
                    <Image Source="/Drive2Gether_logo.jpg" Height="28" Width="28" VerticalAlignment="Center" Margin="10,0,0,0" HorizontalAlignment="Left"/>
                    <TextBlock Text="Drive2Gether" Foreground="White" VerticalAlignment="Center" FontWeight="Bold" Margin="50,0,0,0" Cursor="Hand" MouseLeftButtonUp="Drive2Gether_Click" />
                    <Button Content="settings" Background="Transparent" BorderThickness="0" Foreground="White" FontSize="14" HorizontalAlignment="Right" Margin="0,0,10,0" Click="Settings_Click" />
                </Grid>
            </Border>

            <!-- Registratieformulier -->
            <StackPanel Margin="40,20" Width="300" HorizontalAlignment="Center">
                <TextBlock Text="Voornaam" FontSize="16" Margin="0,5"/>
                <TextBox x:Name="FirstNameBox" Margin="0,0,0,10" Height="30"/>

                <TextBlock Text="Achternaam" FontSize="16" Margin="0,5"/>
                <TextBox x:Name="LastNameBox" Margin="0,0,0,10" Height="30"/>

                <TextBlock Text="E-mail" FontSize="16" Margin="0,5"/>
                <TextBox x:Name="EmailBox" Margin="0,0,0,10" Height="30"/>

                <TextBlock Text="Wachtwoord" FontSize="16" Margin="0,5"/>
                <PasswordBox x:Name="PasswordBox" Margin="0,0,0,10" Height="30"/>

                <Button Content="Registreer" Click="RegisterButton_Click" Background="#8A1E2D" Foreground="White" Height="35" FontWeight="Bold"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
