<Page x:Class="Test.Login_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Login_Page"
      Background="White">
    <DockPanel Background="White" LastChildFill="True">
        <!-- Bovenste header -->
        <Border Background="#4C1130" Height="35" DockPanel.Dock="Top">
            <Grid>
                <Image Source="/Drive2Gether_logo.jpg"
                       Height="28" Width="28"
                       VerticalAlignment="Center"
                       Margin="10,0,0,0"
                       HorizontalAlignment="Left"/>

                

                <Button Content="settings"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="White"
                        FontSize="14"
                        HorizontalAlignment="Right"
                        Margin="0,0,10,0"
                        Click="Settings_Click"/>
                
                <TextBlock Text="Drive2Gether"
                           Foreground="White"
                           VerticalAlignment="Center"
                           FontWeight="Bold"
                           Margin="43,0,7,0"
                           Cursor="Hand"
                           MouseLeftButtonUp="Drive2Gether_Click"/>
            </Grid>
        </Border>

        <!-- Inhoud login -->
        <StackPanel Margin="40,20" Width="300" HorizontalAlignment="Center">
            <TextBlock Text="E-mail" FontSize="16" Margin="0,5"/>
            <TextBox x:Name="EmailBox" Margin="0,0,0,10" Height="30"/>

            <TextBlock Text="Wachtwoord" FontSize="16" Margin="0,5"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,0,0,10" Height="30"/>

            <Button Content="Login"
                    Click="LoginButton_Click"
                    Background="#8A1E2D"
                    Foreground="White"
                    Height="35"
                    FontWeight="Bold"/>

            <Button Content="Nog geen account? Registreer"
                    Click="RegisterLink_Click"
                    Background="Transparent"
                    Foreground="#4C1130"
                    Margin="0,10,0,0"/>
        </StackPanel>
    </DockPanel>
</Page>
