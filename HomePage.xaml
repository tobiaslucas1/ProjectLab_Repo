<Page x:Class="Test.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Test"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="HomePage">

    <Grid Background="White">
        <Frame Name="MainFrame"/>

        <Border Background="#4C1130" Height="35" VerticalAlignment="Top">
            <Grid>
                <Image Source="/Drive2Gether_logo.jpg" Height="28" Width="28" VerticalAlignment="Center" Margin="10,0,0,0" HorizontalAlignment="Left"/>
                <TextBlock Text="Drive2Gether" Foreground="White" VerticalAlignment="Center" FontWeight="Bold" Margin="50,0,0,0"/>
                <Button Content="settings" Background="Transparent" BorderThickness="0" Foreground="White" FontSize="14" HorizontalAlignment="Right" Margin="0,0,10,0"/>
            </Grid>
        </Border>

        <Border BorderBrush="Gray" BorderThickness="1" Margin="100,111,100,149" Background="#FFEFEFEF">
            <Image Source="/map.jpg" Height="225" Width="641" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>

        <TextBox Width="120" Height="25" Margin="110,65,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Text="Location A"/>
        <TextBlock Text="→" FontSize="16" Margin="240,65,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBox Width="120" Height="25" Margin="260,65,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Text="Location B"/>
        <DatePicker Width="120" Height="25" Margin="390,65,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>

        <Button Content="Search" Width="96" Height="26" Margin="530,65,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>

        <Button Content="Driver" Width="95" Height="66" Margin="199,359,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Background="{x:Null}" BorderBrush="Gray"/>
        <Button Content="Passenger" Width="95" Height="66" Margin="483,359,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Background="White" BorderBrush="#FF707070"/>

        <!-- ✅ UPDATED Register Section -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20">
            <TextBlock>
                <Hyperlink Click="Login_Click">Login hier</Hyperlink>
            </TextBlock>
            <TextBlock Text=" of " VerticalAlignment="Center"/>
            <TextBlock>
                <Hyperlink Click="UserRegister_Click">Registreer als gebruiker</Hyperlink>
            </TextBlock>
            <TextBlock Text=" of " VerticalAlignment="Center"/>
            <TextBlock>
                <Hyperlink Click="DriverRegister_Click">Registreer als bestuurder</Hyperlink>
            </TextBlock>
        </StackPanel>

    </Grid>
</Page>
