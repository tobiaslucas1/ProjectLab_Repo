<Page x:Class="Test.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Test"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingsPage" Height="500" Width="800">
    <Grid Background="White" Margin="10">
        <Border Background="#4C1130" Height="35" VerticalAlignment="Top">
            <Grid>
                <Image Source="/Drive2Gether_logo.jpg" Height="28" Width="28" VerticalAlignment="Center" Margin="10,0,0,0" HorizontalAlignment="Left"/>
                <TextBlock VerticalAlignment="Center" FontWeight="Bold" Margin="50,0,0,0" Foreground="White">
                    <Hyperlink Click="Home_Click" Foreground="White" TextDecorations="{x:Null}">Drive2Gether</Hyperlink>
                </TextBlock>
            </Grid>
        </Border>
        <StackPanel Margin="30" VerticalAlignment="Center" HorizontalAlignment="Center" Width="300" >

            <TextBlock Text="Instellingen" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <Button Content="Log Uit" Margin="0,10,0,10" Click="Logout_Click"/>
            <Button Content="Wijzig Wachtwoord" Margin="0,10,0,10" Click="ChangePassword_Click"/>
            <Button Content="Verwijder Account" Background="Red" Foreground="White" Margin="0,10,0,10" Click="DeleteAccount_Click"/>



        </StackPanel>
    </Grid>
    
</Page>
